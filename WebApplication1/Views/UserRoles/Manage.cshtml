
@model List<ManageUserRolesViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>User Account Manager</h1>

@*----------Card Code for Adding ,Removing Roles from user------------*@

<form method="post">
    <div class="card">

        @* Code for CardHeader*@
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User / @ViewBag.UserName.
        </div>

        @* Code for CardBody*@
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        @* Code for CardFooter*@
        <div class="card-footer">
           
            @* Code for SubmitButton*@
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            @* Code for CancelButton*@
            <a asp-action="Index" asp-route-id="@ViewBag.userId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>

    </div>
</form>
