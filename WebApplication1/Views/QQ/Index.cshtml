@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

<h2>User List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-controller="Users" asp-action="ChangePassword" asp-route-userId="@user.Id">Change Password</a>
                </td>
            </tr>
        }
    </tbody>
</table>
